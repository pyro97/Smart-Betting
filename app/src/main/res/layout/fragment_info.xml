<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/button_text_color"
    android:orientation="vertical">

    <LinearLayout
        android:layout_marginTop="40dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            app:srcCompat="@mipmap/ic_launcher" />
    </LinearLayout>

    <LinearLayout
        android:layout_marginBottom="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_marginLeft="20dp"
            android:textColor="@color/fui_bgGitHub"
            android:textSize="18sp"
            android:textStyle="bold"
            android:text="App Name"
            android:layout_width="120dp"
            android:layout_height="wrap_content" />

        <TextView
            android:textSize="18sp"
            android:text="Smart Betting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:layout_marginBottom="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_marginLeft="20dp"
            android:textColor="@color/fui_bgGitHub"
            android:textSize="18sp"
            android:textStyle="bold"
            android:text="Version"
            android:layout_width="120dp"
            android:layout_height="wrap_content" />

        <TextView
            android:textSize="18sp"
            android:text="1.0.0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


    </LinearLayout>

    <LinearLayout
        android:layout_marginBottom="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_marginLeft="20dp"
            android:textColor="@color/fui_bgGitHub"
            android:textSize="18sp"
            android:textStyle="bold"
            android:text="Developer"
            android:layout_width="120dp"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PyroApps"
            android:textColorLink="#8B0000"
            android:textSize="18sp" />


    </LinearLayout>

    <LinearLayout
        android:layout_marginBottom="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_marginLeft="20dp"
            android:textColor="@color/fui_bgGitHub"
            android:textSize="18sp"
            android:textStyle="bold"
            android:text="Contact"
            android:layout_width="120dp"
            android:layout_height="wrap_content" />

        <TextView
            android:textColorLink="#8B0000"
            android:autoLink="email"
            android:textSize="18sp"
            android:text="pyroapps97@gmail.com"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


    </LinearLayout>

    <LinearLayout
        android:layout_marginBottom="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_marginLeft="20dp"
            android:textColor="@color/fui_bgGitHub"
            android:textSize="18sp"
            android:textStyle="bold"
            android:text="Other Apps"
            android:layout_width="120dp"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/otherApps"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColorLink="#8B0000"
            android:textSize="18sp" />


    </LinearLayout>




</LinearLayout>